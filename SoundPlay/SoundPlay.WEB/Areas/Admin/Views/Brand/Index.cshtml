@model IEnumerable<BrandViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3" />
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Brand List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &ensp; Create New Brand
        </a>
    </div>
</div>
<br />
<br />

@if(Model.Count() == 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Brand Name
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="100%" align="center">
                    Table is empty
                </td>
            </tr>         
        </tbody>
    </table>  
}
else
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Brand Name
                </th>
                <th width="100px">
                    Operations
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td align="left">
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary"> 
                                <i class="bi bi-pencil-square"></i>                   
                            </a>

                            <form method="post" asp-controller="Brand" asp-action="Delete" asp-route-id="@obj.Id">
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </form>              
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}