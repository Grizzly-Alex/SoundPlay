@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3" />
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &ensp; Create New Category
        </a>
    </div>
</div>
<br />
<br />

@if(Model.Count() == 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="100%" align="center">
                    Table is empty
                </td>
            </tr>         
        </tbody>
    </table>  
}
else
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th width="170px">
                    Operations
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td align="left">
                        <div>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                                class="btn btn-primary btn-sm"> <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                                class="btn btn-danger btn-sm"> <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>   
}
