@model GuitarViewModel

<form method="get">

	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2 class="text-muted">Detail Guitar</h2>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="text-end">
				<a asp-controller="Guitar" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm shadow-none" style="width:80px">
					<span class="bi bi-wrench"> Edit</span>
				</a>

				<a asp-controller="Guitar" asp-action="index" class="btn btn-outline-secondary btn-sm shadow-none" style="width:80px">
					<span class="bi bi-reply"> Back</span>
				</a>
			</div>
		</div>
	</div>

	<div class="row">
		<div>
			<p><b>Model Guitar: </b>@Model.Name</p>
		</div>

		<div class="col-5">
			<img src="@Constants.GuitarsImages@Model.PictureUrl"
					style="width:400px" />
			<p></p>
		</div>

		<div>
			<p><b>Price: </b>@Model.ViewPrice</p>
			<p><b>Date Delivery: </b>@Model.DateDelivery</p>
		</div>

		<div>
			<b>Description:</b>
			<div class="small">
				<p>@Html.Raw(Model.Description)</p>
			</div>
		</div>

		<p></p>

		<div class="col-4">
			<p><b>Category: </b>@Model.Category?.Name</p>
			<p><b>Brand: </b>@Model.Brand?.Name</p>
			<p><b>Color: </b>@Model.Color?.Name</p>
			<p><b>Shape: </b>@Model.Shape?.Name</p>
		</div>

		<div class="col-4">
			<p><b>Frets Count: </b>@Model.FretsCount</p>
			<p><b>Strings Count: </b>@Model.StringsCount</p>
			<p><b>Tremolo Type: </b>@Model.TremoloType?.Name</p>
			<p><b>Pickup Set: </b>@Model.PickupSet?.Name</p>
		</div>

		<div class="col-4">
			<p><b>Soundboard Material: </b>@Model.Soundboard?.Name</p>
			<p><b>Neck Material: </b>@Model.Neck?.Name</p>
			<p><b>Fretboard Material: </b>@Model.Fretboard?.Name</p>
		</div>
	</div>

</form>
