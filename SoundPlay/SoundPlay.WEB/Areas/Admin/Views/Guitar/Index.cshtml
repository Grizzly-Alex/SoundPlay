@model IEnumerable<GuitarViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3" />
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary text-black-50" >Guitars List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Guitar" asp-action="Create" class="btn btn-outline-success">
            <i class="bi bi-pen">Add</i>
        </a>
    </div>
</div>


@if(Model.Count() == 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Picture Url</th>
                <th>Date delivery</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Color</th>
                <th>Frest count</th>
                <th>Strings count</th>
                <th>Shape</th>
                <th>Soundboardd</th>
                <th>Neck</th>
                <th>Fretboard</th>
                <th>Tremolo type</th>
                <th>Pickup set</th>
            </tr>
        </thead>
    </table> 
}
else
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Guitar Name</th>
                <th width="110px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td align="center">
                        <div class="btn-toolbar justify-content-between" role="toolbar">
                            <a asp-controller="Guitar" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                                <i class="bi bi-wrench"></i>
                            </a>

                            <form method="post" asp-controller="Guitar" asp-action="Delete" asp-route-id="@obj.Id">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>
                                </button>                                                        
                            </form>   
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}