@model GuitarShapeViewModel

<form method="post" asp-controller="GuitarShape" asp-action="Edit" class="row g-3 needs-validation" novalidate>

	<input asp-for="@Model.Id" hidden />

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-black-50">Edit</h2>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control" required>
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
			<div class="valid-feedback">
				Looks good!
			</div>
		</div>
		<button type="submit" class="btn btn-secondary btn-sm" style="width:100px">
			<i class="bi bi-check-lg"></i>
			Update
		</button>
		<a asp-controller="GuitarShape" asp-action="index" class="btn btn-secondary btn-sm" style="width:100px">
			<span class="bi bi-reply"> Back</span>
		</a>
	</div>
</form>


@section Scripts{	
	<partial name="_ValidationScriptsPartial" />
	
}