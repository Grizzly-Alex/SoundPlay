@model IList<AppUser>

@if (Model.Count() == 0)
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Phone Number</th>
            </tr>
        </thead>
    </table>
}
else
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th width="80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Email</td>
                    <td>@obj.Name</td>
                    <td>@obj.PhoneNumber</td>
                    <td align="center">
                        <div class="btn-toolbar justify-content-between" role="toolbar">
                            <a asp-controller="UserManager" asp-action="Edit" asp-route-userId="@obj.Id" class="btn btn-outline-primary btn-sm shadow-none">
                                <i class="bi bi-wrench"></i>
                            </a>
                            <form method="post" asp-controller="UserManager" asp-action="Delete" asp-route-userId="@obj.Id" asp-route-role="@TempData["role"]">
                                <button type="submit" class="btn btn-outline-danger btn-sm shadow-none">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
