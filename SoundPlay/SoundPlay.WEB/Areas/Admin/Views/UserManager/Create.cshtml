@model RegisterUserViewModel


<form method="post" asp-controller="UserManager" asp-action="Create" class="needs-validation" novalidate>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2 class="text-muted">Create User</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
		</div>
	</div>

    <div class="modal-content">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-6 mb-3">
            <select asp-for="@Model.Role" asp-items="@Model.RoleList" class="form-select" required>
                <option selected disabled value="">--Select Role--</option>
            </select>
            <span asp-validation-for="@Model.Role" class="text-danger"></span>
            <div class="valid-feedback">
                Valid!
            </div>
        </div>
        <div class="form-floating col-6 mb-3">
            <input asp-for="@Model.Email" class="form-control rounded-3" placeholder="name@example.com" required />
            <label asp-for="@Model.Email">Email</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <div class="valid-feedback">
                Valid!
            </div>
        </div>
        <div class="form-floating col-6 mb-3">
            <input asp-for="@Model.Name" class="form-control rounded-3" placeholder="name" required />
            <label asp-for="@Model.Name">Name</label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <div class="valid-feedback">
                Valid!
            </div>
        </div>
        <div class="form-floating col-6 mb-3">
            <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="8029-111-11-11" required />
            <label asp-for="@Model.PhoneNumber">Phone Number</label>
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            <div class="valid-feedback">
                Valid!
            </div>
        </div>
        <div class="form-floating col-6 mb-3">
            <input asp-for="@Model.Password" class="form-control" placeholder="password" required />
            <label asp-for="@Model.Password">Password</label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <div class="valid-feedback">
                Valid!
            </div>
        </div>
        <div class="form-floating col-6 mb-3">
            <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="password" required />
            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <div class="valid-feedback">
                Valid!
            </div>
        </div>
        <button class="w-50 mb-2 btn btn-lg rounded-3 btn-secondary" type="submit">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}