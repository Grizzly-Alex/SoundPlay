@model GuitarFilterViewModel

<input asp-for="@Model.CategoryId" hidden />

<div class="container text-center">
    <div class="row">
        <div class="col-2">
            <label asp-for="@Model.Brands"></label>
            <select asp-for="@Model.BrandId" asp-items="@Model.Brands" class="form-select" required>
                <option selected disabled value="">--Select Brand--</option>
            </select>
        </div>
        <div class="col-10">
            <p></p>
            @foreach (var obj in Model.Products)
            {
                <div class="card mb-3 rounded-3" style="max-width: 700px; max-height: 500px;">
                    <div class="row g-0">
                        <div class="col-3 align-self-center">
                            <img src="@WebConstants.GuitarsImages@obj.PictureUrl" class="card-img" style="max-width: 80%" alt="...">
                        </div>
                        <div class="col-9">
                            <div class="card-body ">
                                <h5 class="card-title">@obj.Name</h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>