@model GuitarFilterViewModel

<div class="container-fluid">

    <h2 class="mt-3">@Model.Category.GetDisplayName()</h2>

    <div class="row mt-3 pb-0">
        <div class="col-6 text-start">
            <p class="bi bi-sliders text-muted" style="font-size: 1.2rem;"> Filter</p>
        </div>
        <div class="col-6 text-end">
            <p class="text-muted"> Total Found: @Model.Products?.Count</p>
        </div>
        <hr class="featurette-divider">
    </div>

    <div class="row">
        <div class="col-2">
            <form method="get">
                <input asp-for="@Model.Category" hidden />
                <div class="mb-3">
                    <label asp-for="@Model.Brands"></label>
                    <select asp-for="@Model.BrandId" asp-items="@Model.Brands" class="form-select"></select>                  
                </div>
                <div class ="mb-3">
                    <label asp-for="@Model.Colors"></label>
                    <select asp-for="@Model.ColorId" asp-items="@Model.Colors" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.GuitarShapes"></label>
                    <select asp-for="@Model.ShapeId" asp-items="@Model.GuitarShapes" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Soundboards"></label>
                    <select asp-for="@Model.SoundboardId" asp-items="@Model.Soundboards" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Necks"></label>
                    <select asp-for="@Model.NeckId" asp-items="@Model.Necks" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Fretboards"></label>
                    <select asp-for="@Model.FretboardId" asp-items="@Model.Fretboards" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PickupSets"></label>
                    <select asp-for="@Model.PickupSetId" asp-items="@Model.PickupSets" class="form-select"></select>
                </div>
                @if (Model.TremoloTypes is not null)
                {
                    <div class="mb-3">
                        <label asp-for="@Model.TremoloTypes"></label>
                        <select asp-for="@Model.TremoloTypeId" asp-items="@Model.TremoloTypes" class="form-select"></select>
                    </div>                   
                }


                <hr class="featurette-divider">

                <div class="d-grid gap-2">
                    <button type="submit" class="w-100 btn btn-success btn-sm">
                        <i class="bi bi-check-lg"></i>
                        Apply Filter
                    </button>

                    <a asp-controller="GuitarCatalog" asp-action="DefineCategory" asp-route-category="@Model.Category" class="w-100 btn btn-primary btn-sm">
                        <i class="bi bi-arrow-counterclockwise"></i>
                        Reset Filter
                    </a>
                </div>
                       
            </form>
        </div>

        <div class="col-1"></div>
        
        <div class="col-auto">          
            <p></p>
            @foreach (var obj in Model.Products)
            {
                <div class="card mb-3 rounded-3 align-content-center" style="max-width: 700px; max-height: 500px;">
                    <div class="row g-0">
                        <div class="col-3 align-self-center">
                            <img src="@WebConstants.GuitarsImages@obj.PictureUrl" class="card-img" style="max-width: 80%" alt="...">
                        </div>
                        <div class="col-9">
                            <div class="card-body ">
                                <h5 class="card-title">@obj.Name</h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>