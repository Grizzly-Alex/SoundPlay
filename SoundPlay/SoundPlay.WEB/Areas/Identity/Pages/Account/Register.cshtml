@page
@model RegisterModel

<div class="modal-content rounded-4 shadow">
    <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Register</h1>
    </div>

    <div class="modal-body p-5 pt-0">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row g-3 mb-5">
                <div class="form-floating mb-3">
                    <input asp-for="UserInput.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="UserInput.Email">Email</label>
                    <span asp-validation-for="UserInput.Email" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.Name" class="form-control" aria-required="true" placeholder="name" />
                    <label asp-for="UserInput.Name">Name</label>
                    <span asp-validation-for="UserInput.Name" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.PhoneNumber" class="form-control" aria-required="true" placeholder="name" />
                    <label asp-for="UserInput.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="UserInput.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.StreetAddress" class="form-control" aria-required="true" placeholder="123 Main Street, Apartment 666" />
                    <label asp-for="UserInput.StreetAddress">Street Address</label>
                    <span asp-validation-for="UserInput.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.City" class="form-control" aria-required="true" placeholder="Kyiv" />
                    <label asp-for="UserInput.City">City</label>
                    <span asp-validation-for="UserInput.City" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.State" class="form-control" aria-required="true" placeholder="Ukraine" />
                    <label asp-for="UserInput.State">State</label>
                    <span asp-validation-for="UserInput.State" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.PostalCode" class="form-control" aria-required="true" placeholder="220050" />
                    <label asp-for="UserInput.PostalCode">Postal Code</label>
                    <span asp-validation-for="UserInput.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.Password" class="form-control" aria-required="true" placeholder="password" />
                    <label asp-for="UserInput.Password">Password</label>
                    <span asp-validation-for="UserInput.Password" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserInput.ConfirmPassword" class="form-control" aria-required="true" placeholder="password" />
                    <label asp-for="UserInput.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="UserInput.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button id="registerSubmit" class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Registration</button>
        </form>

        @{
            if ((Model.ExternalLogins?.Count ?? 0) != 0)
            {
                <hr class="my-4">
                <h2 class="fs-5 fw-bold mb-3">Or use a third-party</h2>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}