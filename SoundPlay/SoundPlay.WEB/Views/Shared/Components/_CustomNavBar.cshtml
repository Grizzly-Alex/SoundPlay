@*header main*@
<div class="container">
      
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-3 border-bottom">

        @*Admin offcanvas button*@
        <button class="btn btn-outline-secondary shadow-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
            Admin Panel
            <span class="bi bi-gear"></span>
        </button>

        @*Page links*@
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="#" class="nav-link px-2 link-dark">Contacts</a></li>
            <li><a href="#" class="nav-link px-2 link-dark">About</a></li>
            <li><a href="#" class="nav-link px-2 link-dark">FAQs</a></li>
            <li><a href="#" class="nav-link px-2 link-dark">Service</a></li>
        </ul>

        @*space for basket, wishlist, customer center *@
        <div class="col-md-3 text-end">
            @*User*@
            <button type="submit" class="btn btn-link scale">
                <i class="bi bi-person-circle" style="font-size: 1.5rem; color: gray;"></i>
            </button>  
            @*Basket*@
            <button type="submit" class="btn btn-link position-relative scale">
                <i class="bi bi-bag-check" style="font-size: 1.5rem; color: gray;"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @*Product count*@99+
                    <span class="visually-hidden">unread messages</span>
                </span>
            </button>
        </div>

    </header>
</div>
