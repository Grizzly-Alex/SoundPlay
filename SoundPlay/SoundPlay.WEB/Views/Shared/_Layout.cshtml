<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoundPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoundPlay.WEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>


<body class="bg-light">

    @*header main*@
    <div class="container">
      
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-3 border-bottom">

            @*Admin offcanvas button*@
            <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
                Admin Panel
                <span class="bi bi-arrow-bar-right"></span>
            </button>

            @*Down line*@
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            @*Page links*@
            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a href="#" class="nav-link px-2 link-dark">Contacts</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">About</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">FAQs</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">Service</a></li>
            </ul>

            <div class="col-md-3 text-end">
                @*space for basket, wishlist, customer center *@
            </div>

        </header>
    </div>

    @*header catalog*@
    <div>
        <nav class="navbar navbar-dark bg-dark" aria-label="Dark offcanvas navbar">
            <div class="container-fluid">         
                
                @*button start offcanvass*@
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbarDark" aria-controls="offcanvasNavbarDark">
                    <span class="bi bi-music-note-list"></span>
                </button>

                @*button category*@
                <button type="button" class="btn btn-dark">Guitars</button>
                <button type="button" class="btn btn-dark">Basses</button>
                <button type="button" class="btn btn-dark">Drums</button>
                <button type="button" class="btn btn-dark">Keys</button>
                <button type="button" class="btn btn-dark">Brass</button>
                <button type="button" class="btn btn-dark">Microphones</button>
                <button type="button" class="btn btn-dark">Accessories</button>
                <button type="button" class="btn btn-dark">Cables</button>
                <button type="button" class="btn btn-dark">Traditional</button>

                @*searcher*@
                <form class="d-flex mt-3 mt-lg-0" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

            </div>
        </nav>
    </div>

    @*offcanvass category*@
    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasNavbarDark" aria-labelledby="offcanvasNavbarDarkLabel">

        @*offcanvass header*@
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasNavbarDarkLabel">Products</h5>
            <button type="button" class="btn-close btn-close-start" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        @*body offcanvas*@
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                <li class="nav-item">
                    <a class="nav-link" href="#">Electro Guitars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Classical Guitars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Accustic Guitars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Electric Bass</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Accustic Bass</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Amps</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Strings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Effects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pickups</a>
                </li>
            </ul>
        </div>
    </div>
 
    @*offcanvass admin panel*@
    <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">

        @*offcanvass header*@
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Admin Panel</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-storage-tab" data-bs-toggle="tab" data-bs-target="#nav-storage" type="button" role="tab" aria-controls="nav-storage" aria-selected="true">
                        Storage
                    </button>
                    <button class="nav-link" id="nav-stuff-tab" data-bs-toggle="tab" data-bs-target="#nav-stuff" type="button" role="tab" aria-controls="nav-stuff" aria-selected="false">
                        Stuff                       
                    </button>
                    <button class="nav-link" id="nav-shopper-tab" data-bs-toggle="tab" data-bs-target="#nav-shopper" type="button" role="tab" aria-controls="nav-shopper" aria-selected="false">
                        Shopper                       
                    </button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-storage" role="tabpanel" aria-labelledby="nav-storage-tab" tabindex="0">
                    Test1
                </div>
                <div class="tab-pane fade" id="nav-stuff" role="tabpanel" aria-labelledby="nav-stuff-tab" tabindex="0">
                    Test2
                </div>
                <div class="tab-pane fade" id="nav-shopper" role="tabpanel" aria-labelledby="nav-shopper-tab" tabindex="0">
                    Test3
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/cheatsheet.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>